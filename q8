#include <stdio.h>

float valor, entrada;
int prestacao;

int main(){

printf("Digite o valor da mercadoria:\n");
scanf("%f",&valor);

prestacao = (int)(valor/3);
entrada = valor - (2*prestacao);

printf("Valor das prestações: %d\n", prestacao);
printf("Valor da entrada:%.2f\n", entrada);

    return 0;
}
